# GoFast Backend V2 Environment Variables
# IMPORTANT: Local .env file is required for development (Prisma Studio, testing, etc.)
# Render environment variables are used for production deployment
# Copy this file to .env and fill in your local database connection

# Database Configuration
DATABASE_URL="postgresql://..."

# Firebase Admin SDK (Service Account)
# Get from Render environment variables (FIREBASE_SERVICE_ACCOUNT_KEY)
FIREBASE_SERVICE_ACCOUNT_KEY=""

# Server Configuration
PORT=3001
NODE_ENV=development

# Example DATABASE_URL formats:
# Local PostgreSQL: postgresql://username:password@localhost:5432/database_name
# Render PostgreSQL: postgresql://user:password@host:port/database_name
# Supabase: postgresql://postgres:password@db.project.supabase.co:5432/postgres

# Strava OAuth
STRAVA_CLIENT_ID=
STRAVA_CLIENT_SECRET=
STRAVA_REDIRECT_URI=https://gofastbackendv2-fall2025.onrender.com/api/strava/callback
STRAVA_BASE_URL=https://www.strava.com/api/v3